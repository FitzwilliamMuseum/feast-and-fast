---
---
{
  
    {% for entry in site.posts %}
        "{{ entry.url | slugify }}": {
            "title": "{{ entry.title | xml_escape }}",
            "url": "{{ entry.url | xml_escape }}",
            "summary": "{{ entry.content | strip_html | strip_newlines | truncatewords: 50 | xml_escape | json}}",
            "content": "{{ entry.content | strip_html | strip_newlines |  xml_escape | json}}",
            {% if entry.image %}
            "thumbnail": "{{ entry.image | xml_escape }}",
            "image":  "{{ entry.image | xml_escape }}"
            {% else %}
            "thumbnail": "{{ site.background | xml_escape }}",
            "image":  "{{ site.background | xml_escape }}"
            {% endif %}
          },
    {% endfor %}
    {% for entry in site.discover %}
        "{{ entry.url | slugify }}": {
            "title": "{{ entry.title | xml_escape }}",
            "url": "{{ entry.url | xml_escape }}",
            "summary": "{{ entry.content | strip_html | strip_newlines | truncatewords: 50 | xml_escape | json}}",
            "content": "{{ entry.content | strip_html | strip_newlines | truncatewords: 50| xml_escape | json }}",
            {% if entry.image %}
            "thumbnail": "{{ entry.image | xml_escape }}",
            "image":  "{{ entry.image | xml_escape }}"
            {% else %}
            "thumbnail": "{{ site.background | xml_escape }}",
            "image":  "{{ site.background | xml_escape }}"
            {% endif %}
          }
          {% unless forloop.last %},{% endunless %}
    {% endfor %}

}
